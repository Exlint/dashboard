{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", ":semanticCommitTypeAll(chore)", ":semanticCommitScopeDisabled"],
	"regexManagers": [
		{
			"fileMatch": ["^(\\.github\\/workflows)\\/[^/]+\\.yaml$"],
			"matchStrings": ["node-version: (?<currentValue>.*)?"],
			"depNameTemplate": "node",
			"datasourceTemplate": "node",
			"versioningTemplate": "node"
		},
		{
			"fileMatch": ["^(\\.github\\/workflows)\\/[^/]+\\.yaml$"],
			"matchStrings": ["(pnpm-version|package-manager-version): (?<currentValue>.*)?"],
			"depNameTemplate": "pnpm",
			"datasourceTemplate": "npm"
		},
		{
			"fileMatch": ["^docker\\/Dockerfile\\..*$"],
			"matchStrings": ["FROM node:(?<currentValue>.*)?"],
			"depNameTemplate": "node",
			"datasourceTemplate": "node",
			"versioningTemplate": "node"
		}
	],
	"packageRules": [
		{
			"updateTypes": ["minor", "patch"],
			"automerge": true
		},
		{
			"matchPackageNames": ["node"],
			"matchManagers": ["dockerfile"],
			"enabled": false
		}
	],
	"ignoreDeps": ["chalk"],
	"commitMessageAction": "ðŸ¤– Update"
}
