{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2017",
		"baseUrl": "./",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"@/modules/*": ["src/modules/*"],
			"@/config/*": ["src/config/*"],
			"@/decorators/*": ["src/decorators/*"],
			"@/models/*": ["src/models/*"],
			"@/guards/*": ["src/guards/*"],
			"@/interfaces/*": ["src/interfaces/*"],
			"@/data/*": ["src/data/*"]
		},
		"typeRoots": ["./node_modules/@types", "./@types"]
	}
}
