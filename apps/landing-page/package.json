{
	"name": "exlint",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"husky:install": "husky install",
		"git:config": "git config --local include.path ../.gitconfig",
		"setdev": "run-p husky:install git:config",
		"onboarding": "node ./scripts/onboarding.cjs",
		"prepare": "is-ci || run-s setdev onboarding",
		"start:dev": "next dev -p 80",
		"build": "next build && next export",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"format": "prettier --write \"**/*.{ts,tsx,scss,js,json}\"",
		"type-check": "tsc --noEmit",
		"depcheck:root": "depcheck --config ./.depcheckrc.json",
		"template:page": "hygen component new-page",
		"template:container": "hygen component new-container",
		"template:layout": "hygen component new-layout",
		"template:ui": "hygen component new-ui"
	},
	"dependencies": {
		"@commitlint/cli": "^17.0.2",
		"commitizen": "^4.2.4",
		"cz-vinyl": "^1.3.2",
		"i18next": "^21.6.10",
		"mixpanel-browser": "^2.45.0",
		"next": "12.0.10",
		"npm-run-all": "^4.1.5",
		"react": "17.0.2",
		"react-card-carousel": "^1.1.3",
		"react-dom": "17.0.2",
		"react-i18next": "^11.15.3",
		"react-intersection-observer": "^9.4.1"
	},
	"devDependencies": {
		"@exlint.io/inflint": "^1.2.7",
		"@types/mixpanel-browser": "^2.38.0",
		"@types/node": "17.0.14",
		"@types/react": "17.0.39",
		"@typescript-eslint/eslint-plugin": "^5.10.2",
		"@typescript-eslint/parser": "^5.10.2",
		"asciinema-player": "3.0.0-rc.1",
		"chalk": "4.1.2",
		"depcheck": "^1.4.3",
		"eslint": "8.8.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-deprecation": "^1.3.3",
		"eslint-plugin-i18next": "^6.0.0-4",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"figlet": "^1.5.2",
		"husky": "8.0.1",
		"is-ci": "^3.0.1",
		"lint-staged": "12.4.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"prettier-plugin-sh": "^0.12.8",
		"sass": "^1.49.7",
		"stylelint": "^14.5.0",
		"typescript": "4.5.5"
	}
}
